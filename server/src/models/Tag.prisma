model Tag {
  id        Int       @id @default(autoincrement())
  name      String          @unique
  questions TagOnQuestion[]
}

model TagOnQuestion {
  questionId Int
  tagId      Int
  question   Question @relation(fields: [questionId], references: [id])
  tag        Tag      @relation(fields: [tagId], references: [id])

  @@id([questionId, tagId])
  @@index([tagId])
  @@index([questionId])
}
