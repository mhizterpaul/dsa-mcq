model Question {
  id          String       @id
  title       String
  body        String
  difficulty  Difficulty
  categoryId  String
  category    Category     @relation(fields: [categoryId], references: [id])
  tags        TagOnQuestion[]
  tagsText    String[]
  createdAt   DateTime     @default(now())

  @@index([difficulty])
  @@index([categoryId])
  @@index([tagsText], type: Gin)
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
}
